#Edit aliases
alias eal='v ~/.alias ; source ~/.alias'

#Listings
alias el='exa -l'
alias es='exa'
alias esa='exa -la'
alias lla='lsa -la'
alias ll='ls -l'
alias lt='du -sh * | sort -h'

#Other 
alias g=git
alias c=clear
alias k='kill -9'
alias f='find -name'
alias ..='cd ..'
alias ...='cd ../..'
alias h='history'
alias hh='history 10'
alias df='df -h'
alias du='du -h'
alias cpv='rsync -ah --info --progress'

#network
alias ports='netstat -tulanp'

#neovim
alias vim='nvim'
alias vi='nvim'
alias v='nvim'
alias evi='v ~/.config/nvim/init.vim'
